        /* 深浅色主题适配 */
        :root {
            --bg-primary: #ffffff;
            --bg-secondary: #f8f9fa;
            --bg-navbar: rgba(255, 255, 255, 0.85);
            --text-primary: #333333;
            --text-secondary: #666666;
            --text-tertiary: #999999;
            --border-color: rgba(0, 0, 0, 0.1);
            --shadow-color: rgba(0, 0, 0, 0.1);
            --link-color: #007acc;
            --link-hover: #005a9e;
            --button-bg: #007acc;
            --button-text: #ffffff;
            --card-bg: #ffffff;
            --modal-bg: #ffffff;
            --icon-opacity: 0.3;
            --transition-speed: 0.3s;
        }

        [data-theme="dark"] {
            --bg-primary: #1a1a1a;
            --bg-secondary: #2d2d2d;
            --bg-navbar: rgba(26, 26, 26, 0.85);
            --text-primary: #ffffff;
            --text-secondary: #cccccc;
            --text-tertiary: #999999;
            --border-color: rgba(255, 255, 255, 0.1);
            --shadow-color: rgba(0, 0, 0, 0.3);
            --link-color: #4da6ff;
            --link-hover: #66b3ff;
            --button-bg: #4da6ff;
            --button-text: #1a1a1a;
            --card-bg: #2d2d2d;
            --modal-bg: #2d2d2d;
            --icon-opacity: 0.2;
        }

        /* 应用主题变量 */
        body {
            background: var(--bg-primary);
            color: var(--text-primary);
            transition: background var(--transition-speed) ease, color var(--transition-speed) ease;
        }

        .navbar {
            background-color: var(--bg-navbar);
            box-shadow: 0 1.6px 3.6px var(--shadow-color),
                        0 0.3px 0.9px var(--shadow-color),
                        0 0 0 1px var(--border-color) inset;
            transition: all var(--transition-speed) cubic-bezier(0.4, 0, 0.2, 1);
        }

        .navbar-title {
            color: var(--text-primary);
            transition: color var(--transition-speed) ease;
        }

        .nav-link {
            color: var(--text-primary);
            transition: all var(--transition-speed) ease;
        }

        .nav-link:hover {
            background-color: rgba(0, 122, 204, 0.1);
            color: var(--link-color);
        }

        .nav-link.passport {
            background-color: var(--link-color);
            color: var(--button-text);
        }

        .nav-link.passport:hover {
            background-color: var(--link-hover);
            color: var(--button-text);
        }

        .hero-content h1 {
            color: var(--text-primary);
            transition: color var(--transition-speed) ease;
        }

        .hero-content h3 {
            color: var(--text-primary);
            transition: color var(--transition-speed) ease;
        }

        /* 按钮保持原有样式，不在深色模式下改变 */

        .terms {
            color: var(--text-secondary);
            transition: color var(--transition-speed) ease;
        }

        .terms a {
            color: var(--link-color);
            text-decoration: none;
            transition: color var(--transition-speed) ease;
        }

        .terms a:hover {
            color: var(--link-hover);
            text-decoration: underline;
        }

        .floating-icon {
            opacity: var(--icon-opacity);
            transition: opacity var(--transition-speed) ease;
        }

        /* 深色模式下的滚动条样式 */
        [data-theme="dark"] .dialog-content-scroll::-webkit-scrollbar-track {
            background: #1a1a1a;
        }

        [data-theme="dark"] .dialog-content-scroll::-webkit-scrollbar-thumb {
            background: #555;
        }

        [data-theme="dark"] .dialog-content-scroll::-webkit-scrollbar-thumb:hover {
            background: #777;
        }

        /* 深色模式下的Fluent UI组件适配 */
        [data-theme="dark"] fluent-dialog::part(control) {
            background: var(--modal-bg);
            color: var(--text-primary);
        }

        [data-theme="dark"] fluent-dialog h2,
        [data-theme="dark"] fluent-dialog h3 {
            color: var(--text-primary) !important;
        }

        [data-theme="dark"] fluent-button {
            --button-background: var(--button-bg);
            --button-color: var(--button-text);
        }

        /* 主题切换按钮样式 - 现在在顶栏中 */
        .theme-toggle {
            position: relative;
            background: transparent;
            border: 1px solid var(--border-color);
            border-radius: 50%;
            width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all var(--transition-speed) ease;
            margin-left: auto;
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
        }

        .theme-toggle:hover {
            transform: scale(1.1);
            background: rgba(0, 122, 204, 0.1);
        }

        .theme-toggle img {
            width: 20px;
            height: 20px;
            transition: all var(--transition-speed) ease;
        }

        .theme-toggle .sun-icon {
            display: none;
        }

        .theme-toggle .moon-icon {
            display: block;
        }

        [data-theme="dark"] .theme-toggle .sun-icon {
            display: block;
        }

        [data-theme="dark"] .theme-toggle .moon-icon {
            display: none;
        }

        /* 响应式设计 - 主题切换按钮 */
        @media (max-width: 768px) {
            .theme-toggle {
                width: 32px;
                height: 32px;
            }

            .theme-toggle img {
                width: 18px;
                height: 18px;
            }
        }

        /* 深色模式下的顶栏滚动效果 */
        [data-theme="dark"] .navbar.scrolled {
            background-color: rgba(26, 26, 26, 0.95);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.4);
        }

        /* 图标显示控制 */
        .light-only {
            display: inline-block;
        }
        
        .dark-only {
            display: none;
        }
        
        [data-theme="dark"] .light-only {
            display: none;
        }
        
        [data-theme="dark"] .dark-only {
            display: inline-block;
        }
    </style>
</head>
