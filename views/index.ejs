    <script>
        // 主题切换功能
        function getSystemTheme() {
            if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
                return 'dark';
            }
            return 'light';
        }

        function initTheme() {
            const savedTheme = localStorage.getItem('theme');
            const theme = savedTheme || getSystemTheme();
            document.documentElement.setAttribute('data-theme', theme);
            updateNavbarScrollEffect(); // 更新导航栏滚动效果
        }

        function toggleTheme() {
            const currentTheme = document.documentElement.getAttribute('data-theme');
            const newTheme = currentTheme === 'light' ? 'dark' : 'light';
            
            document.documentElement.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateNavbarScrollEffect(); // 更新导航栏滚动效果
        }

        function updateNavbarScrollEffect() {
            const navbar = document.querySelector('.navbar');
            const isDark = document.documentElement.getAttribute('data-theme') === 'dark';
            
            if (window.scrollY > 10) {
                if (isDark) {
                    navbar.style.backgroundColor = 'rgba(26, 26, 26, 0.95)';
                    navbar.style.boxShadow = '0 2px 8px rgba(0, 0, 0, 0.4)';
                    navbar.classList.add('scrolled');
                } else {
                    navbar.style.backgroundColor = 'rgba(255, 255, 255, 0.95)';
                    navbar.style.boxShadow = '0 2px 8px rgba(0, 0, 0, 0.15)';
                    navbar.classList.remove('scrolled');
                }
            } else {
                if (isDark) {
                    navbar.style.backgroundColor = 'rgba(26, 26, 26, 0.85)';
                    navbar.style.boxShadow = '0 1.6px 3.6px rgba(0, 0, 0, 0.3), 0 0.3px 0.9px rgba(0, 0, 0, 0.1), 0 0 0 1px rgba(255, 255, 255, 0.1) inset';
                    navbar.classList.remove('scrolled');
                } else {
                    navbar.style.backgroundColor = 'rgba(255, 255, 255, 0.85)';
                    navbar.style.boxShadow = '0 1.6px 3.6px rgba(0, 0, 0, 0.1), 0 0.3px 0.9px rgba(0, 0, 0, 0.05), 0 0 0 1px rgba(0, 0, 0, 0.05) inset';
                    navbar.classList.remove('scrolled');
                }
            }
        }

        // 标题轮播功能
        document.addEventListener('DOMContentLoaded', function() {
            // 初始化主题
            initTheme();
            
            // 绑定主题切换按钮事件
            const themeToggle = document.getElementById('themeToggle');
            if (themeToggle) {
                themeToggle.addEventListener('click', toggleTheme);
            }
            
            // 监听系统主题变化
            if (window.matchMedia) {
                const darkModeQuery = window.matchMedia('(prefers-color-scheme: dark)');
                darkModeQuery.addEventListener('change', function(e) {
                    // 只有在用户没有手动设置主题时才跟随系统
                    if (!localStorage.getItem('theme')) {
                        const newTheme = e.matches ? 'dark' : 'light';
                        document.documentElement.setAttribute('data-theme', newTheme);
                        updateNavbarScrollEffect();
                    }
                });
            }
            
            const titleItems = document.querySelectorAll('.title-item');
            let currentIndex = 0;
            
            // 每 3 秒切换一次标题
            setInterval(() => {
                // 淡出当前标题
                titleItems[currentIndex].classList.remove('active');
                
                // 计算下一个标题索引
                currentIndex = (currentIndex + 1) % titleItems.length;
                
                // 淡入下一个标题
                titleItems[currentIndex].classList.add('active');
            }, 3000);
        });

        // 顶栏滚动效果
        window.addEventListener('scroll', function() {
            updateNavbarScrollEffect();
        });

        // 背景图标动画 - 分批创建以避免初始堆积
        function createFloatingIcons() {
            const iconsContainer = document.getElementById('backgroundIcons');
            console.log('创建背景图标，容器:', iconsContainer);
            
            // 从模板获取图标列表
            const icons = <%- JSON.stringify(backgroundIcons) %>;
            console.log('从配置获取到图标列表:', icons);
            
            if (!icons || icons.length === 0) {
                console.warn('没有可用的图标，背景动画将不会显示');
                return;
            }
            
            const iconSizes = ['small', 'medium', 'large'];
            const numberOfIcons = 25; // 图标数量
            
            // 分批创建图标，避免初始堆积
            function createIconBatch(startIndex, batchSize) {
                for (let i = startIndex; i < Math.min(startIndex + batchSize, numberOfIcons); i++) {
                    const icon = document.createElement('img');
                    const randomIcon = icons[Math.floor(Math.random() * icons.length)];
                    const randomSize = iconSizes[Math.floor(Math.random() * iconSizes.length)];
                    
                    icon.src = randomIcon;
                    icon.className = `floating-icon ${randomSize}`;
                    icon.style.position = 'absolute';
                    
                    // 随机垂直位置
                    const randomTop = Math.random() * 100; // 0-100% 的垂直位置
                    // 让图标从屏幕左侧外开始，从更远处进入
                    const randomLeft = -20 - Math.random() * 30; // -20到-50% 的水平位置（屏幕左侧更远处）
                    const randomDelay = Math.random() * 3; // 0-3秒的延迟，减少初始延迟
                    const randomDuration = 10 + Math.random() * 8; // 10-18秒的动画持续时间
                    
                    icon.style.top = `${randomTop}%`;
                    icon.style.left = `${randomLeft}%`; // 初始位置在屏幕右侧外
                    icon.style.animationDelay = `${randomDelay}s`;
                    icon.style.animationDuration = `${randomDuration}s`;
                    
                    iconsContainer.appendChild(icon);
                    console.log(`创建图标 ${i+1}: ${randomIcon}, 大小: ${randomSize}, 位置: ${randomTop}%`);
                }
            }
            
            // 立即创建第一批图标（5个）
            createIconBatch(0, 5);
            
            // 分批创建剩余的图标
            let currentIndex = 5;
            const batchInterval = setInterval(() => {
                createIconBatch(currentIndex, 3);
                currentIndex += 3;
                
                if (currentIndex >= numberOfIcons) {
                    clearInterval(batchInterval);
                    console.log(`总共创建了 ${numberOfIcons} 个背景图标`);
                }
            }, 1000); // 每1秒创建一批
        }

        // 页面加载完成后创建背景图标
        document.addEventListener('DOMContentLoaded', createFloatingIcons);
        
        // 显示下载模态对话框
        function showDownloadModal(event) {
            event.preventDefault();
            const modal = document.getElementById('downloadModal');
            
            // 设置显示状态并移除隐藏属性
            modal.setAttribute('data-show', 'true');
            modal.hidden = false;
            
            // 聚焦到第一个按钮
            setTimeout(() => {
                const firstButton = modal.querySelector('fluent-button');
                if (firstButton) {
                    firstButton.focus();
                }
            }, 100);
        }
        
        // 隐藏下载模态对话框
        function hideDownloadModal() {
            const modal = document.getElementById('downloadModal');
            
            // 设置隐藏状态
            modal.setAttribute('data-show', 'false');
            
            // 等待动画完成后隐藏
            setTimeout(() => {
                modal.hidden = true;
            }, 300);
        }
        
        // 点击模态对话框外部关闭
        document.getElementById('downloadModal').addEventListener('click', function(event) {
            if (event.target === this) {
                hideDownloadModal();
            }
        });

        // 键盘支持 - ESC键关闭模态框
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                const modal = document.getElementById('downloadModal');
                if (!modal.hidden) {
                    hideDownloadModal();
                }
            }
        });

        // 防止模态框内容点击事件冒泡
        document.querySelector('#downloadModal > div').addEventListener('click', function(e) {
            e.stopPropagation();
        });
